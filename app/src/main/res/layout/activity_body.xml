<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.BodyActivity" android:layout_centerInParent="true" android:background="#FFFFFF">


    <ImageView
            android:id="@+id/charts2"
            android:src="@drawable/charts"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/add"
            android:clickable="true"
            android:src="@drawable/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/shoulders"
            android:text="shoulders:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height" android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/biceps"
            android:text="biceps:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868"
            app:layout_constraintTop_toBottomOf="@+id/chest" app:layout_constraintStart_toStartOf="parent"
            app:layout_marginBaseline="8dp" android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/chest"
            android:text="chest:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/shoulders"
            app:layout_marginBaseline="8dp" android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/forearm"
            android:text="forearm:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868"
            app:layout_constraintTop_toBottomOf="@+id/biceps" app:layout_constraintStart_toStartOf="parent"
            app:layout_marginBaseline="8dp" android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/wrest"
            android:text="wrest:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868" android:layout_alignParentEnd="true" android:layout_centerVertical="true"
            app:layout_constraintTop_toBottomOf="@+id/forearm" app:layout_constraintStart_toStartOf="parent"
            app:layout_marginBaseline="8dp" android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/talia"
            android:text="talia:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868" android:layout_centerVertical="true"
            app:layout_constraintTop_toBottomOf="@+id/wrest" app:layout_marginBaseline="8dp"
            android:layout_margin="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/legs"
            android:text="legs:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868"
            app:layout_constraintTop_toBottomOf="@+id/talia"
            app:layout_marginBaseline="8dp"
            android:layout_margin="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/calf"
            android:text="calf:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold"
            android:textColor="#686868" app:layout_constraintTop_toBottomOf="@+id/legs"
            app:layout_marginBaseline="8dp"
            android:layout_margin="8dp" app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/height"
            android:text="height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textSize="16sp"
            android:textStyle="bold" android:textColor="#686868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/charts2" android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/weight"
            android:textColor="#686868"
            android:text="weight:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/calf" app:layout_marginBaseline="8dp"
            android:layout_margin="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>