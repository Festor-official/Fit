<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".fragments.AddBodyMeasurementsFragment"
>

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:id="@+id/body_part"
            android:text="height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:textSize="18sp" android:textColor="#000000"
            android:layout_alignBaseline="@id/body_measurements"/>

    <TextView
            android:id="@+id/next"
            android:text="--->"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#000000" android:textSize="20sp"
            android:layout_toRightOf="@id/body_measurements" android:layout_alignBaseline="@id/body_measurements"/>

    <EditText
            android:id="@+id/body_measurements"
            android:hint="Measurements(cm/kg)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/body_part"/>

</RelativeLayout>