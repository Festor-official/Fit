<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">


    <ImageView
            android:id="@+id/body_icon"
            android:clickable="true"
            android:src="@drawable/body_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            tools:listitem="@layout/exercise_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@id/body_icon"/>

</RelativeLayout>