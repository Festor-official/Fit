<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="16dp">

    <ImageView
            android:id="@+id/exercise_image"
            android:src="@drawable/repeat"
            android:layout_width="130dp"
            android:layout_height="160dp" />

    <TextView
            android:id="@+id/exercise_name"
            android:text="Push up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" android:textSize="16sp"
            android:layout_below="@id/exercise_image" android:textStyle="bold"
            android:layout_alignRight="@id/exercise_image" android:layout_alignLeft="@id/exercise_image"
            android:background="@drawable/exercise_background" android:fontFamily="@font/days_one"
            android:paddingLeft="8dp"/>


</RelativeLayout>